<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<BorderPane fx:controller="mg.ankoay.restomanagefinal.productlist.view.ProductListCtl" xmlns:fx="http://javafx.com/fxml">
	<left>
		<VBox>
			<children>
				<Button fx:id="btnAllOrders">Commandes</Button>
				<Label text="Table" />
				<ComboBox fx:id="cmbTables" />
				<TableView id="masterContactTable" fx:id="sldProdTbl" AnchorPane.bottomAnchor="0.0"
							   AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
					<columns>
						<TableColumn prefWidth="150.0" text="Produit">
							<cellValueFactory>
								<PropertyValueFactory property="name"/>
							</cellValueFactory>
						</TableColumn>
						<TableColumn prefWidth="75.0" text="Qte">
							<cellValueFactory>
								<PropertyValueFactory property="quantity"/>
							</cellValueFactory>
						</TableColumn>
						<TableColumn prefWidth="75.0" text="P.U">
							<cellValueFactory>
								<PropertyValueFactory property="price"/>
							</cellValueFactory>
						</TableColumn>
						<TableColumn prefWidth="100.0" text="Total">
							<cellValueFactory>
								<PropertyValueFactory property="total"/>
							</cellValueFactory>
						</TableColumn>
					</columns>
					<columnResizePolicy>
						<TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
					</columnResizePolicy>
				</TableView>
				<HBox>
					<Button fx:id="decQtyBtn" text="-" />
					<TextField fx:id="qtyTxt" />
					<Button fx:id="incQtyBtn" text="+" />
					<Label fx:id="prodNameLbl" />
					<padding>
						<Insets top="10" left="0" right="10" bottom="10"/>
					</padding>
				</HBox>
				
				<Region VBox.vgrow="ALWAYS" />
				<Label fx:id="status" />
				<HBox>
					<children>
						<Label style="-fx-font-weight:bold" text="Total:" />
						<Region HBox.hgrow="ALWAYS" />
						<Label style="-fx-font-weight:bold" fx:id="totalPriceLbl" text="0 MGA" />
					</children>
					<padding>
						<Insets top="10" left="0" right="0" bottom="10"/>
					</padding>
				</HBox>
				<VBox>
					<FlowPane style="-fx-background-color: #808080;" alignment="bottom_left">
						<Button fx:id="orderBtn" text="Commander" />
						<Button text="Payer" />
						<Button text="En attente" />
					</FlowPane>
					<padding>
						<Insets top="10" left="0" right="0" bottom="10"/>
					</padding>
				</VBox>
			</children>		
			<padding>
				<Insets top="10" left="10" right="10" bottom="10"/>
			</padding>
		</VBox>
	</left>
	<center>
		<VBox>
			<Label text="Categories" />
			<FlowPane fx:id="categories" />
			<Label text="Produits" />
			<ScrollPane fitToHeight="true" fitToWidth="true">
				<FlowPane fx:id="products" />
			</ScrollPane>
			<padding>
				<Insets top="10" left="10" right="10" bottom="10"/>
			</padding>
		</VBox>
	</center>
</BorderPane>
