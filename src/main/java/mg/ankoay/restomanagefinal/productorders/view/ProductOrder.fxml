<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<AnchorPane fx:controller="mg.ankoay.restomanagefinal.productorders.view.ProductOrderCtl" xmlns:fx="http://javafx.com/fxml">
    <children>
        <SplitPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <items>
                <AnchorPane>
                    <children>
                    	<VBox  AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    		<Button fx:id="btnBack">Retour</Button>
                    		<Label text="Liste des commandes" />
	                    	<TableView fx:id="tblOrders" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
	                            <columns>
	                                <TableColumn text="Date">
	                                    <cellValueFactory>
	                                        <PropertyValueFactory property="date" />
	                                    </cellValueFactory>
	                                </TableColumn>
	                                 <TableColumn text="Table">
	                                    <cellValueFactory>
	                                        <PropertyValueFactory property="table" />
	                                    </cellValueFactory>
	                                </TableColumn>
	                                 <TableColumn text="Prix total">
	                                    <cellValueFactory>
	                                        <PropertyValueFactory property="total" />
	                                    </cellValueFactory>
	                                </TableColumn>
	                            </columns>
	                            <columnResizePolicy>
	                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
	                            </columnResizePolicy>
	                        </TableView>
                    	</VBox>
                    </children>
                </AnchorPane>
                <AnchorPane>
                    <children>
                    	<VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                			<children>
                				<Label text="Date" />
                				<TextField fx:id="txtOrderDetailsDt"/>
                				<Label text="Table" />
                				<TextField fx:id="txtOrderDetailsTable"/>
	                    		<Label text="Details" />
		                    	<TableView fx:id="tblOrderDetails">
		                            <columns>
		                                <TableColumn prefWidth="150.0" text="Produit">
		                                    <cellValueFactory>
		                                        <PropertyValueFactory property="name" />
		                                    </cellValueFactory>
		                                </TableColumn>
		                                <TableColumn prefWidth="75.0" text="Qte">
		                                    <cellValueFactory>
		                                        <PropertyValueFactory property="quantity" />
		                                    </cellValueFactory>
		                                </TableColumn>
		                                <TableColumn prefWidth="75.0" text="P.U">
		                                    <cellValueFactory>
		                                        <PropertyValueFactory property="price" />
		                                    </cellValueFactory>
		                                </TableColumn>
		                                <TableColumn prefWidth="100.0" text="Total">
		                                    <cellValueFactory>
		                                        <PropertyValueFactory property="total" />
		                                    </cellValueFactory>
		                                </TableColumn>
		                            </columns>
		                            <columnResizePolicy>
		                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
		                            </columnResizePolicy>
		                        </TableView>
		                        <VBox>
		                        	<FlowPane alignment="bottom_left">
		                        		<children>
		                        			<Label text="Total" />
		                        			<TextField fx:id="txtOrderDetailsTotal" />
		                        		</children>
		                        	</FlowPane>
									<FlowPane alignment="bottom_left">
										<children>
											<Button text="Payer" />
											<Button text="Imprimer" />
										</children>
									</FlowPane>
									<padding>
										<Insets top="10" left="0" right="0" bottom="10"/>
									</padding>
								</VBox>
	                       </children>
                    	</VBox>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>

    </children>
</AnchorPane>